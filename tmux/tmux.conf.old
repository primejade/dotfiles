## # set r to resload the tmux configuration
unbind r
bind r source-file ~/.tmux.conf \; display "Reloaded ~/.tmux.conf"

# # set v to rename the window
unbind v
bind v command-prompt "rename-window '%%'"
##
## The modes 
set-window-option -g clock-mode-colour red
##set-window-option -g mode-style fg=yellow,bg=black,bold
##
##
## The messages 
#set -g message-style fg=black,bg=brightred
##
## Set vi as the default editor
set -g status-keys vi
#
## set color for status bar
#set-option -g status-style bg=black,fg=white
#
## set window title list colors
set-window-option -g window-status-style bg=white,fg=black,bold
#
## active window title colors
set-window-option -g window-status-current-style bg=white,fg=black,dim
#
set-window-option -g window-status-separator "-"
#
# ---------------- #
# Define Colors    #
# ---------------- #
GRAY="#292929"
MGRAY="#191919"
BLUE="#569CD6"
DARK_BLUE="#223E55"
RED="#EE4646"
YELLOW="#ffff22"
BACKGROUND="#000000"
FOREGROUND="#ffffff"
ACTIVE="#87ff5f"

# ----------------- #
# Define Status Bar #
# ----------------- #
set -g status-interval 1
set -g status-style bg=white,fg=black

set-window-option -g window-status-style bg=white,fg=black
set-window-option -g window-status-current-style bg=black,fg=$ACTIVE,bold

# ------------ #
# Define Panes #
# ------------ #
set -g pane-border-style fg=$DARK_BLUE
set -g pane-active-border-style fg=$BLUE

# ---------------- #
# Define Left Side #
# ---------------- #
set -g status-left " [#{session_name}] "
set -g status-left-style bg=$GRAY,fg=$FOREGROUND

# -------------- #
# Define Windows #
# -------------- #
set -g window-status-separator " "

# ----------------- #
# Define Right Side #
# ----------------- #
set -g status-right-length 50
set -g status-right "%Y-%m-%d <$USER> %H:%M:%S "

